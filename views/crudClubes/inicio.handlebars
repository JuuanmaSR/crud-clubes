{{>navbar}}

<div class="page">
    <h1 class="h1-title">Crud de equipos</h1>
    {{#if messages}}
        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
            <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
            </symbol>
        </svg>
        <div class="alert alert-success d-flex align-items-center" role="alert">
         <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
            <div>
                {{messages}}
            </div>
        </div>
    {{/if}}
      {{#if errors}}
        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
            <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </symbol>
        </svg>
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <div>
                {{errors}}
            </div>
        </div>
    {{/if}}
    <div class="container-principal">
        <h3>Hay {{equipos.length}} equipos</h3>
        <button id="agregar-equipos" class="button"><a href="/crudClubes/crear">Crear equipo</a></button>
    </div>
    
    <div class="header-grid">
        <ul>
             <li><b>Nombre Equipo</b></li>
        </ul>
        <ul>
            <li><b>País</b></li>
        </ul>
        <ul>
            <li><b>Acción</b></li>
         </ul>
    </div>
    
    <div class="container-grid">
        {{#each equipos}}
        <div class="grid">
            <ul class="lista-nombre-equipo">
                <li><img class="logo-equipo" src="{{crestUrl}}" alt="logoEquipo"></li>
            
               <li>{{name}}</li>
           
            </ul>
            
            <ul class="lista-paises">
                <li>{{areaName}}</li>
            </ul>
            <ul class="lista-botones">
                <li><button class="button"><a href="/crudClubes/ver/{{id}}">Ver</a></button></li>
                
                <li><button class="button"><a href="/crudClubes/editar/{{id}}"  onclick="return confirmAction(`editar`)">Editar</a></button></li>
                
                <li><button class="button"><a href="/crudClubes/eliminar/{{id}}" onclick="return confirmAction(`eliminar`)">Eliminar</a></button></li>
            </ul>
        </div>
        {{/each}}
      
    </div>
</div>
<script type="text/javascript">
    function confirmAction(action){
        let respuesta = confirm(`Desea ${action} este equipo?`);
        if(respuesta){
            return  true;
            
        }else{
            return false;
        }
        
    };
</script>